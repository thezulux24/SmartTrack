<div class="min-h-screen bg-white relative">
  <!-- Background Image -->
  <div class="fixed inset-0 z-0">
    <img src="02.jpg" alt="Background" class="absolute inset-0 w-full h-full object-cover">
    <div class="absolute inset-0 bg-white/90"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10">
    <!-- Header -->
    <div class="bg-white shadow-md">
      <div class="max-w-lg mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <div class="flex items-center space-x-3">
            <div class="bg-white rounded-lg px-3 py-2">
              <img src="https://www.implameq.com/wp-content/uploads/logotipo-impla-300x78.png.webp" 
                   alt="Implameq" class="h-6">
            </div>
          </div>
          <div class="flex items-center space-x-2 sm:space-x-3">
            <button [routerLink]="['/internal/inventario']"
                    class="w-10 h-10 bg-[#10284C] rounded-lg flex items-center justify-center active:scale-95 transition-transform">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Title -->
    <div class="max-w-lg mx-auto px-4 py-6 text-center">
      <h1 class="text-2xl sm:text-3xl font-bold text-[#10284C] mb-2">
        {{ isEditing() ? 'Editar Producto' : 'Nuevo Producto' }}
      </h1>
      <p class="text-[#10284C]/70 text-sm">
        {{ isEditing() ? 'Modifica la informaci√≥n del producto' : 'Ingresa los datos del nuevo producto' }}
      </p>
    </div>

  <!-- Loading state -->
  @if (loading()) {
    <div class="px-4 py-6">
      <div class="max-w-lg mx-auto">
        <div class="bg-white rounded-xl shadow-md p-6 text-center">
          <div class="animate-pulse space-y-4">
            <div class="h-4 bg-gray-200 rounded w-3/4 mx-auto"></div>
            <div class="h-4 bg-gray-200 rounded w-1/2 mx-auto"></div>
            <div class="h-4 bg-gray-200 rounded w-2/3 mx-auto"></div>
          </div>
          <p class="text-sm text-gray-500 mt-4">
            {{ isEditing() ? 'Cargando producto...' : 'Guardando producto...' }}
          </p>
        </div>
      </div>
    </div>
  } @else {

    <!-- Mensaje de √©xito -->
    @if (success()) {
      <div class="px-4 py-4">
        <div class="max-w-lg mx-auto">
          <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl shadow-md">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <p class="text-sm">{{ success() }}</p>
            </div>
          </div>
        </div>
      </div>
    }

    <!-- Mensaje de error -->
    @if (error()) {
      <div class="px-4 py-4">
        <div class="max-w-lg mx-auto">
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl shadow-md">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z">
                </path>
              </svg>
              <p class="text-sm">{{ error() }}</p>
            </div>
          </div>
        </div>
      </div>
    }

    <!-- Formulario -->
    <div class="max-w-lg mx-auto px-4 pb-8">
      <form [formGroup]="productoForm" (ngSubmit)="onSubmit()" class="space-y-4">
        
        <!-- Informaci√≥n b√°sica -->
        <div class="bg-white/50 rounded-2xl border-2 border-[#0098A8] overflow-hidden shadow-sm">
          <div class="bg-white/50 px-4 py-3 border-b-2 border-[#0098A8]">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-[#C8D900] rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[#10284C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h2 class="text-lg font-bold text-[#10284C]">Informaci√≥n B√°sica</h2>
            </div>
          </div>
          
          <div class="p-4 space-y-3">
            <!-- Nombre del producto -->
            <div>
              <label class="block text-sm font-medium text-[#10284C] mb-1">
                Nombre del Producto *
              </label>
              <input type="text" 
                     formControlName="nombre"
                     placeholder="Ej: Implante de titanio grado 4"
                     [class]="'w-full px-3 py-2 bg-gray-100 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#0098A8] focus:border-transparent ' + 
                             (isFieldInvalid('nombre') ? 'border-red-300' : 'border-gray-300')">
              @if (isFieldInvalid('nombre')) {
                <p class="text-red-600 text-xs mt-1">{{ getFieldError('nombre') }}</p>
              }
            </div>

            <!-- C√≥digo del producto -->
            <div>
              <label class="block text-sm font-medium text-[#10284C] mb-1">
                C√≥digo del Producto
              </label>
              <input type="text" 
                     formControlName="codigo"
                     placeholder="Se generar√° autom√°ticamente si se deja vac√≠o"
                     class="w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#0098A8] focus:border-transparent">
              <p class="text-xs text-[#10284C]/60 mt-1">
                Opcional. Si no se especifica, se generar√° autom√°ticamente.
              </p>
            </div>

            <!-- Descripci√≥n -->
            <div>
              <label class="block text-sm font-medium text-[#10284C] mb-1">
                Descripci√≥n
              </label>
              <textarea formControlName="descripcion"
                        rows="3"
                        placeholder="Descripci√≥n detallada del producto..."
                        class="w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#0098A8] focus:border-transparent resize-none"></textarea>
            </div>
          </div>
        </div>

        <!-- Categorizaci√≥n -->
        <div class="bg-white/50 rounded-2xl border-2 border-[#0098A8] overflow-hidden shadow-sm">
          <div class="bg-white/50 px-4 py-3 border-b-2 border-[#0098A8]">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-[#C8D900] rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[#10284C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
              </div>
              <h2 class="text-lg font-bold text-[#10284C]">Categorizaci√≥n</h2>
            </div>
          </div>
          
          <div class="p-4 space-y-3">
              <!-- Categor√≠a -->
              <div>
                <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                  Categor√≠a *
                </label>
                <select formControlName="categoria"
                        [class.border-red-500]="isFieldInvalid('categoria')"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                               focus:ring-lime-500 focus:border-lime-500 block w-full p-3
                               dark:bg-gray-700 dark:border-gray-600 dark:text-white 
                               dark:focus:ring-lime-500 dark:focus:border-lime-500">
                  <option value="">Selecciona una categor√≠a</option>
                  @for (cat of categoriasOptions; track cat.value) {
                    <option [value]="cat.value">{{ cat.label }}</option>
                  }
                </select>
                @if (isFieldInvalid('categoria')) {
                  <p class="text-red-500 text-xs mt-1">{{ getFieldError('categoria') }}</p>
                }
              </div>

              <!-- Proveedor -->
              <div>
                <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                  Proveedor
                </label>
                <input type="text" 
                       formControlName="proveedor"
                       placeholder="Nombre del proveedor"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                              focus:ring-lime-500 focus:border-lime-500 block w-full p-3
                              dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white 
                              dark:focus:ring-lime-500 dark:focus:border-lime-500">
              </div>
            </div>
          </div>

          <!-- Informaci√≥n de inventario -->
          <div class="bg-white rounded-xl shadow-md dark:bg-gray-800 dark:border dark:border-gray-700 p-6">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center space-x-2">
              <div class="w-8 h-8 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              <span>Inventario y Precios</span>
            </h2>

            <div class="space-y-4">
              <!-- Precio -->
              <div>
                <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                  Precio *
                </label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="text-gray-500 sm:text-sm">$</span>
                  </div>
                  <input type="number" 
                         formControlName="precio"
                         min="0"
                         step="0.01"
                         placeholder="0.00"
                         [class.border-red-500]="isFieldInvalid('precio')"
                         class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                                focus:ring-lime-500 focus:border-lime-500 block w-full pl-8 p-3
                                dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white 
                                dark:focus:ring-lime-500 dark:focus:border-lime-500">
                </div>
                @if (isFieldInvalid('precio')) {
                  <p class="text-red-500 text-xs mt-1">{{ getFieldError('precio') }}</p>
                }
              </div>

              <!-- Stock m√≠nimo y unidad de medida -->
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                    Stock M√≠nimo *
                  </label>
                  <input type="number" 
                         formControlName="stock_minimo"
                         min="0"
                         placeholder="5"
                         [class.border-red-500]="isFieldInvalid('stock_minimo')"
                         class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                                focus:ring-lime-500 focus:border-lime-500 block w-full p-3
                                dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white 
                                dark:focus:ring-lime-500 dark:focus:border-lime-500">
                  @if (isFieldInvalid('stock_minimo')) {
                    <p class="text-red-500 text-xs mt-1">{{ getFieldError('stock_minimo') }}</p>
                  }
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                    Unidad de Medida *
                  </label>
                  <select formControlName="unidad_medida"
                          [class.border-red-500]="isFieldInvalid('unidad_medida')"
                          class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                                 focus:ring-lime-500 focus:border-lime-500 block w-full p-3
                                 dark:bg-gray-700 dark:border-gray-600 dark:text-white 
                                 dark:focus:ring-lime-500 dark:focus:border-lime-500">
                    @for (unidad of unidadesMedidaOptions; track unidad.value) {
                      <option [value]="unidad.value">{{ unidad.label }}</option>
                    }
                  </select>
                  @if (isFieldInvalid('unidad_medida')) {
                    <p class="text-red-500 text-xs mt-1">{{ getFieldError('unidad_medida') }}</p>
                  }
                </div>
              </div>

              <!-- Ubicaci√≥n principal -->
              <div>
                <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                  Ubicaci√≥n Principal
                </label>
                <select formControlName="ubicacion_principal"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                               focus:ring-lime-500 focus:border-lime-500 block w-full p-3
                               dark:bg-gray-700 dark:border-gray-600 dark:text-white 
                               dark:focus:ring-lime-500 dark:focus:border-lime-500">
                  
                  <!-- ‚úÖ Sedes Principales -->
                  <optgroup label="üè¢ Sedes Principales">
                    @for (ubicacion of ubicacionesOrganizadas.sedes_principales; track ubicacion.value) {
                      <option [value]="ubicacion.value">{{ ubicacion.label }}</option>
                    }
                  </optgroup>

                  <!-- ‚úÖ Sedes Secundarias -->
                  <optgroup label="üè¨ Sedes Secundarias">
                    @for (ubicacion of ubicacionesOrganizadas.sedes_secundarias; track ubicacion.value) {
                      <option [value]="ubicacion.value">{{ ubicacion.label }}</option>
                    }
                  </optgroup>

                  <!-- ‚úÖ Bodegas -->
                  <optgroup label="üì¶ Bodegas">
                    @for (ubicacion of ubicacionesOrganizadas.bodegas; track ubicacion.value) {
                      <option [value]="ubicacion.value">{{ ubicacion.label }}</option>
                    }
                  </optgroup>

                  <!-- ‚úÖ Quir√≥fanos -->
                  <optgroup label="üè• Quir√≥fanos">
                    @for (ubicacion of ubicacionesOrganizadas.quirofanos; track ubicacion.value) {
                      <option [value]="ubicacion.value">{{ ubicacion.label }}</option>
                    }
                  </optgroup>

                  <!-- ‚úÖ Emergencias -->
                  <optgroup label="üö® Emergencias">
                    @for (ubicacion of ubicacionesOrganizadas.emergencias; track ubicacion.value) {
                      <option [value]="ubicacion.value">{{ ubicacion.label }}</option>
                    }
                  </optgroup>

                  <!-- ‚úÖ Especiales -->
                  <optgroup label="‚ö° √Åreas Especiales">
                    @for (ubicacion of ubicacionesOrganizadas.especiales; track ubicacion.value) {
                      <option [value]="ubicacion.value">{{ ubicacion.label }}</option>
                    }
                  </optgroup>
                </select>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                  Ubicaci√≥n donde se almacenar√° principalmente este producto.
                </p>
              </div>
            </div>
          </div>

          <!-- Notas adicionales -->
          <div class="bg-white rounded-xl shadow-md dark:bg-gray-800 dark:border dark:border-gray-700 p-6">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center space-x-2">
              <div class="w-8 h-8 bg-gradient-to-br from-gray-400 to-gray-600 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </div>
              <span>Informaci√≥n Adicional</span>
            </h2>

            <div>
              <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
                Notas y Observaciones
              </label>
              <textarea formControlName="notas"
                        rows="4"
                        placeholder="Informaci√≥n adicional, instrucciones especiales, etc..."
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                               focus:ring-lime-500 focus:border-lime-500 block w-full p-3
                               dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white 
                               dark:focus:ring-lime-500 dark:focus:border-lime-500"></textarea>
            </div>
          </div>

          <!-- Botones de acci√≥n -->
          <div class="bg-white rounded-xl shadow-md dark:bg-gray-800 dark:border dark:border-gray-700 p-6">
            <div class="space-y-3">
              <button type="submit" 
                      [disabled]="productoForm.invalid || loading()"
                      class="w-full text-gray-900 bg-lime-400 hover:bg-lime-500 focus:ring-4 focus:outline-none 
                             focus:ring-lime-300 font-bold rounded-lg text-sm px-5 py-3 text-center 
                             dark:bg-lime-400 dark:hover:bg-lime-500 dark:focus:ring-lime-500
                             disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2">
                @if (loading()) {
                  <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-gray-900" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <span>Guardando...</span>
                } @else {
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{{ isEditing() ? 'Actualizar Producto' : 'Crear Producto' }}</span>
                }
              </button>
              
              <button type="button" 
                      (click)="onCancel()"
                      [disabled]="loading()"
                      class="w-full text-white bg-gray-600 hover:bg-gray-700 focus:ring-4 focus:outline-none 
                             focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-3 text-center 
                             dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800
                             disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Cancelar</span>
              </button>
            </div>
          </div>

          <!-- Debug para desarrollo (solo en development) -->
          <!-- <div class="bg-gray-100 rounded-xl p-4 dark:bg-gray-700">
            <button type="button" (click)="debugForm()" 
                    class="text-xs bg-gray-500 text-white px-2 py-1 rounded">
              Debug Form
            </button>
          </div> -->

          <!-- Bottom spacing para m√≥vil -->
          <div class="h-6"></div>
        </form>
      }
    </div>
  </main>
</section>